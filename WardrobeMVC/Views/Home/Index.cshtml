@{
    ViewBag.Title = "Home Page";
}

<div class="indexRowOne row">
    <div class="col-7 indexColOne">
        <p class="indexRowOnetext">You look great, let us help you find clothes that match</p>
    </div>
</div>
<!------------------------------------------ CARASAUL-->
<div id="carouselExampleIndicators" class="carousel slide indexcara" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
            <img class="d-block img-fluid indexcara" src="~/Images/Purplebg.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block img-fluid indexcara" src="~/Images/Purplebg.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block img-fluid indexcara" src="~/Images/Purplebg.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<!------------------------------------------ROW TWO-->
<div class="indexRowTwo row">
    <div class="indexColTwo col">
        <p class="indexRowOnetext">How To Use:</p>
        <p class="indexRowOnetext">Upload photos of clothes you would like to try to the appropriate catagories, set them to an outfit then see how it looks</p>
    </div>
    <div class="indexColTwo col">
        <p class="indexRowOnetext">Lets get started by getting your picture:</p>
        <a class="indexRowOnetextTwo indexRowOnetext" href=@Url.Action("Create","Charachters")>Click here!</a>
        <p class="indexRowOnetext">Or just select clothes to fit our models:</p>
        <a class="indexRowOnetext indexRowOnetextTwo" href=@Url.Action("Create","OutfitNames")>Start your outfit here!</a>
    </div>

</div>

